<!DOCTYPE html>
<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Home.css" rel="stylesheet" type="text/css" runat="server" />
    <link href="~/Content/Create.css" rel="stylesheet" type="text/css" runat="server" />
    <link href="~/Content/Animation.css" rel="stylesheet" type="text/css" runat="server" />
    <script type="text/javascript" src="~/Scripts/function.js" runat="server"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top color">
        <div class="container">
            <div class="navbar-header">
                <form action="/Home/Index/"><input type="submit" class="login-btn orange" value="Back"/></form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span>&copy; @DateTime.Now.Year - Krake</span>
            <form action="/Home/Impressum/" method="get"><input type="submit" class="login-btn" value="Impressum" /></form>
            <form action="/Home/Datenschutz/" method="get"><input type="submit" class="login-btn" value="Datenschutz" /></form>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

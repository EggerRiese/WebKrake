
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
    <div class="error-info">

        <h2>Error @Model</h2>

        @if (Model == 500)
        {
            <p>Sorry, es kann gerade keine Verbindung zur Datenbank hergestellt werden. Der Fehler liegt bei uns.</p>
        }
        else if (Model == 501)
        {
            <p>Sorry, die Anfrage ist fehlerhaft. Der fehler liegt bei uns.</p>
        }
        else if (Model == 401)
        {
            <p>Sorry, aber hier ist ein Fehler aufgetreten.</p>
        }

    </div>